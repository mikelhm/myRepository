<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.resourcedemo.MainActivity"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title"
        android:textColor="@color/title"
        android:textSize="@dimen/title" />

    <TextView
        android:id="@+id/textIntroduce"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/introduce"
        android:textSize="@dimen/introduce"
        android:textColor="@color/introduce"
         />

    <Button
        android:id="@+id/nextBut"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="颜色资源彩虹桥"
        android:gravity="center" />

    <TextView
        android:id="@+id/textFoot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/foot"
        android:gravity="center"
        android:text="android资源访问学习：style样式" />

</LinearLayout>